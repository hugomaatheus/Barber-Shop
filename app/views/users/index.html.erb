<p id="notice"><%= notice %></p>

<h1>Usuários</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @users.empty? %>
    <tr>
      <td colspan="5" style="text-align: center"><h3>Nenhum usuário encontrado.</h3></td>
    </tr>
    <% end %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Detalhes', user, class: 'btn waves-effect waves-light z-depth-4' %></td>
        <td><%= link_to 'Editar', edit_user_path(user), class: 'btn waves-effect waves-light z-depth-4' %></td>
        <td><%= link_to 'Deletar', user, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn waves-effect waves-red z-depth-4' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  new_user_path, class: 'btn-floating btn-large waves-effect waves-circle waves-light z-depth-4' do %>
  <i class="material-icons">add</i>
<% end %>

<%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'btn waves-effect waves-light z-depth-4' %>
<%= link_to 'Voltar', menu_index_path, class: 'btn waves-effect waves-light z-depth-4' %>
